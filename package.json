{
  "name": "streamdeck-ai-plugin",
  "version": "1.0.0",
  "description": "Stream Deck plugin for AI-powered text processing",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w --watch.onEnd=\"streamdeck restart com.dzarlax.ai-assistant\"",
    "link": "streamdeck link com.dzarlax.ai-assistant.sdPlugin",
    "clean": "rm -rf com.dzarlax.ai-assistant.sdPlugin"
  },
  "keywords": [
    "streamdeck",
    "ai",
    "openai",
    "anthropic",
    "clipboard"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@elgato/cli": "^1.0.0",
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "rollup": "^4.57.1",
    "tslib": "^2.8.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@elgato/streamdeck": "^1.4.1",
    "axios": "^1.6.0"
  },
  "engines": {
    "node": ">=20.5.1"
  }
}